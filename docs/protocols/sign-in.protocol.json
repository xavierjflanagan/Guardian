{
  "name": "daily-sign-in",
  "version": "1.0.0",
  "description": "Daily work session start protocol",
  "triggers": ["manual", "scheduled:12:00-AEST"],
  "validations": [
    {
      "type": "previous-signoff-check",
      "description": "Verify previous work session was properly signed off",
      "required": true,
      "action_on_fail": "prompt-manual-signoff"
    },
    {
      "type": "notion-connection",
      "description": "Verify Notion MCP connection is working",
      "required": false,
      "action_on_fail": "log-warning"
    }
  ],
  "actions": [
    {
      "id": "session-start",
      "type": "time-track",
      "action": "start-session",
      "timestamp": "auto",
      "metadata": {
        "session_type": "development",
        "rd_eligible": true
      }
    },
    {
      "id": "progress-log-update",
      "type": "file-update",
      "target": "docs/PROGRESS_LOG.md",
      "action": "append",
      "template": "session-start",
      "data": {
        "timestamp": "auto",
        "session_id": "auto"
      }
    },
    {
      "id": "daily-tasks-review",
      "type": "file-read",
      "target": "docs/management/TASKS.md",
      "action": "extract-current-priorities",
      "output": "console"
    },
    {
      "id": "notion-standup-create",
      "type": "notion-sync",
      "target": "daily-standup",
      "action": "create-entry",
      "data": {
        "date": "auto",
        "session_start": "auto",
        "status": "in-progress",
        "priorities": "from-tasks-file"
      }
    },
    {
      "id": "system-status-check",
      "type": "status-check",
      "targets": [
        {
          "name": "github",
          "endpoint": "https://api.github.com/repos/xavierjflanagan/Guardian",
          "check": "accessible"
        },
        {
          "name": "vercel",
          "check": "deployment-status"
        },
        {
          "name": "supabase",
          "check": "service-health"
        }
      ],
      "output": "console-summary"
    },
    {
      "id": "welcome-message",
      "type": "display",
      "message": "ðŸš€ Work session started! Today's priorities loaded. Ready to build Guardian!",
      "include_data": [
        "session_id",
        "start_time",
        "current_priorities"
      ]
    }
  ],
  "error_handling": {
    "strategy": "continue-on-non-critical",
    "critical_actions": ["session-start", "progress-log-update"],
    "log_file": "protocols/logs/sign-in-errors.log"
  },
  "success_criteria": {
    "required_completions": ["session-start", "progress-log-update"],
    "optional_completions": ["notion-standup-create", "system-status-check"]
  }
}