{
  "table": "patient_conditions",
  "pass": "pass-2",
  "required": ["patient_id", "event_id", "shell_file_id", "condition_name"],
  "fields": {
    "patient_id": "uuid (context, has patient_id column)",
    "event_id": "uuid (parent clinical event, NOT NULL, renamed from clinical_event_id)",
    "shell_file_id": "uuid (source document, NOT NULL)",
    "primary_narrative_id": "uuid? (Pass 3, ON DELETE SET NULL)",
    "condition_name": "string (NOT NULL)",
    "condition_code": "string?",
    "condition_system": "icd10|snomed|custom?",
    "severity": "mild|moderate|severe|critical?",
    "status": "active|resolved|inactive|remission|relapse? (default: active)",
    "onset_date": "date?",
    "diagnosed_date": "date?",
    "resolved_date": "date?",
    "diagnosed_by": "string?",
    "confidence_score": "numeric(3,2) 0.00-1.00 (default: 1.0)",
    "ai_extracted": "boolean (true)",
    "ai_confidence": "numeric(4,3) 0.000-1.000",
    "requires_review": "boolean",
    "notes": "string?",
    "clinical_context": "jsonb? (default: {})"
  },
  "severity_values": {
    "mild": "Minor condition",
    "moderate": "Some impact on activities",
    "severe": "Substantial impact",
    "critical": "Life-threatening"
  },
  "status_values": {
    "active": "Currently ongoing",
    "resolved": "Fully resolved",
    "inactive": "Not symptomatic",
    "remission": "Temporary improvement",
    "relapse": "Return of condition"
  },
  "example": {
    "patient_id": "uuid-from-context",
    "event_id": "uuid-of-parent-clinical-event",
    "shell_file_id": "uuid-from-context",
    "condition_name": "Type 2 Diabetes Mellitus",
    "condition_code": "E11.9",
    "condition_system": "icd10",
    "severity": "moderate",
    "status": "active",
    "onset_date": "2020-03-15",
    "diagnosed_date": "2020-03-20",
    "diagnosed_by": "Dr. Sarah Johnson",
    "ai_extracted": true,
    "ai_confidence": 0.920,
    "requires_review": false
  }
}
