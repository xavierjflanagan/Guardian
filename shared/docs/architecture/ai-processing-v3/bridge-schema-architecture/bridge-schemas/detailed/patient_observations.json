    },
    
    "interpretation": {
      "enum": ["normal", "abnormal_low", "abnormal_high", "critical_low", "critical_high", "borderline"]
    },
    
    "body_site": {
      "type": "string",
      "description": "Anatomical location"
    },
    
    "method": {
      "type": "string",
      "description": "Method or technique used"
    },
    
    "performed_by": "string",
    
    "specimen_type": {
      "type": "string",
      "description": "Specimen type for lab tests (blood, urine, etc.)"
    },
    
    "fasting_status": "boolean",
    
    "notes": "string",
    
    "snomed_code": "string",
    
    "loinc_code": {
      "type": "string",
