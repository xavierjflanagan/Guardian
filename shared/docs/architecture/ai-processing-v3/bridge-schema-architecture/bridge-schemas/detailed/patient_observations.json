{
  "table_name": "patient_observations",
  "description": "Clinical observations: vital signs, lab results, assessments, measurements",
  
  "required_fields": {
    "observation_type": {
      "enum": ["vital_sign", "lab_result", "physical_assessment", "measurement", "clinical_finding"],
      "description": "Type: vital_sign, lab_result, physical_assessment, measurement, clinical_finding"
    },
    
    "observation_name": {
      "type": "string",
      "description": "Specific name of observation or measurement"
    },
    
    "observation_date": {
      "type": "string",
      "format": "ISO 8601"
    },
    
    "confidence_score": {
      "type": "number",
      "range": "0.0-1.0"
    }
  },
  
  "optional_fields": {
    "value_numeric": {
      "type": "number",
      "description": "Numeric value for quantitative results"
    },
    
    "value_text": {
      "type": "string",
      "description": "Text value for qualitative observations"
    },
    
    "unit_of_measure": {
      "type": "string",
      "description": "Unit for numeric values (mmHg, Â°F, bpm, mg/dL, %)"
    },
    
