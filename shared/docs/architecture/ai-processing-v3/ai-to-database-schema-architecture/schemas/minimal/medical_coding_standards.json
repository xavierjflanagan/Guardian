{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Medical Coding (Ultra-Minimal)",
  "description": "Essential codes: SNOMED, LOINC, CPT, ICD-10",
  "type": "object",
  "properties": {
    "snomed_code": {
      "type": "string",
      "description": "SNOMED-CT concept ID"
    },
    "loinc_code": {
      "type": "string", 
      "description": "LOINC measurement ID"
    },
    "cpt_code": {
      "type": "string",
      "description": "CPT procedure code"
    },
    "icd10_code": {
      "type": "string",
      "description": "ICD-10 diagnosis code"
    },
    "coding_confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  },
  "required": ["coding_confidence"],
  "_ai_guidance": {
    "usage": "Include relevant medical codes with confidence"
  }
}