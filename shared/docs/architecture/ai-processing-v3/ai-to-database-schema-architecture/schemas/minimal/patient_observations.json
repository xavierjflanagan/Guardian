{
  "table_name": "patient_observations",
  "description": "Clinical observations: vital signs, lab results, measurements",
  
  "required_fields": {
    "observation_type": {
      "enum": ["vital_sign", "lab_result", "physical_assessment", "measurement"]
    },
    
    "observation_name": "string",
    
    "observation_date": "ISO 8601",
    
    "confidence_score": "number (0.0-1.0)"
  },
  
  "optional_fields": {
    "value_numeric": "number",
    "value_text": "string", 
    "unit_of_measure": "string",
    "interpretation": "string",
    "body_site": "string",
    "method": "string",
    "performed_by": "string",
    "loinc_code": "string",
    "coding_confidence": "number (0.0-1.0)"
  },
  
  "validation": {
    "confidence_threshold": 0.7
  },
  
  "output_example": {
    "observation_type": "vital_sign",
    "observation_name": "Blood Pressure",
    "value_numeric": 140,
    "unit_of_measure": "mmHg",
    "observation_date": "2024-07-15T10:30:00Z",
    "confidence_score": 0.95
  }
}