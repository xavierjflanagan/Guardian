{
  "table_name": "patient_conditions", 
  "description": "Medical conditions and diagnoses",
  
  "required_fields": {
    "condition_type": {
      "enum": ["diagnosis", "symptom", "risk_factor"]
    },
    
    "condition_name": "string",
    
    "onset_date": "ISO 8601",
    
    "confidence_score": "number (0.0-1.0)"
  },
  
  "optional_fields": {
    "severity": "string",
    "status": "string", 
    "diagnosed_by": "string",
    "icd10_code": "string",
    "snomed_code": "string",
    "coding_confidence": "number (0.0-1.0)"
  },
  
  "validation": {
    "confidence_threshold": 0.7
  },
  
  "output_example": {
    "condition_type": "diagnosis",
    "condition_name": "Hypertension",
    "status": "active",
    "onset_date": "2024-06-01T00:00:00Z",
    "icd10_code": "I10",
    "confidence_score": 0.94
  }
}