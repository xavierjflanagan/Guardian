{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Medical Coding Standards (Efficient)",
  "description": "Healthcare standards: SNOMED, LOINC, CPT, ICD-10",
  "type": "object",
  "properties": {
    "snomed_code": {
      "type": "string",
      "description": "SNOMED-CT concept (e.g., '75367002')"
    },
    "snomed_display": {
      "type": "string",
      "description": "SNOMED name"
    },
    "loinc_code": {
      "type": "string",
      "description": "LOINC code (e.g., '8480-6')"
    },
    "loinc_component": {
      "type": "string", 
      "description": "What is measured"
    },
    "cpt_code": {
      "type": "string",
      "description": "CPT procedure (5 digits)"
    },
    "cpt_description": {
      "type": "string",
      "description": "CPT procedure name"
    },
    "icd10_code": {
      "type": "string",
      "description": "ICD-10 diagnosis code"
    },
    "icd10_description": {
      "type": "string",
      "description": "ICD-10 diagnosis name"
    },
    "coding_confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "AI confidence (0.0-1.0)"
    },
    "coding_method": {
      "type": "string",
      "enum": ["automated_ai", "manual_verification", "hybrid"]
    },
    "needs_review": {
      "type": "boolean",
      "description": "Requires medical professional review"
    }
  },
  "required": ["coding_confidence", "coding_method"],
  "_ai_guidance": {
    "usage": "Include appropriate medical codes with confidence scores. Flag uncertain codes for review.",
    "priority": "Use specific codes when confident, broader codes when uncertain."
  }
}